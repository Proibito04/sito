---
import type { Project } from "../types";
import { Image } from "astro:assets";
import { Icon } from "astro-icon";

import placeholder from "../images/placeholder.jpg";
interface Props {
  project: {
    text: string;
    project: Project[];
  };
}

const { project } = Astro.props;
---

<div class="mt-5 first:m-0">
  <p class="mb-2 font-bold">{project.text}</p>
  <div class="flex flex-wrap gap-3">
    {
      project.project.map((el) => (
        <a
          href={`./projects/${el.link}`}
          class="inline-block w-full max-w-xs flex-grow basis-[100%] 
          rounded bg-[#183324] p-2 text-center no-underline shadow-md
          transition hover:bg-green-950 md:basis-0"
        >
          <div>
            <div class="">
              <Image
                src={el.img ?? placeholder}
                alt={el.img ? `${el.title} project image` : "placeholder"}
              />
            </div>
          </div>

          <p class="text-md my-2">{el.title}</p>

          <div class="grid gap-1 p-2 text-left font-bold text-white pt-0">
            {el.technologies && (
              <div>
                {el.technologies.fronted && (
                  <>
                    <p>Frontend</p>
                    <div class="w-7">
                      {el.technologies?.fronted?.map((icon) => (
                        <Icon pack="logos" name={icon} />
                      ))}
                    </div>
                  </>
                )}

                {el.technologies.backend && (
                  <>
                    <p>backend</p>
                    <div class="w-7">
                      {el.technologies?.backend?.map((icon) => (
                        <Icon pack="logos" name={icon} />
                      ))}
                    </div>
                  </>
                )}
              </div>
            )}
          </div>

          <div class="p-2">
            <p
              class="rounded  bg-green-900  py-2 font-bold text-white
            "
            >
              More Details
            </p>
          </div>
        </a>
      ))
    }
  </div>
</div>
