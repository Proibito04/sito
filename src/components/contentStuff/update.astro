---
export interface Props {
  date?: Date;
}

const { date } = Astro.props;

const formatted = date ? new Date(date) : null;
---

<p class="my-0 text-sm text-gray-400">
  🧁 Update: {
    formatted?.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    }) ?? "👻"
  }
</p>
